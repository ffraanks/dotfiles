#!/bin/env bash

# Script para baixar o Vim-Plug

printf "Baixando o Vim-Plug\n\n"
sleep 2 && sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

printf "\n\nFinalizado...\n\n" && exit 0
