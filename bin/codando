#!/usr/bin/env bash

# Script para codar

PY=.py
SH=.sh

while true; do
  clear
  printf "Escolha uma das opções abaixo:\n\n[1] - Escrever em Python\n[2] - Escrever em Shell\n[3] - Sair\n\n"
  read CODE
  if [ $CODE == '1' ] || [ $CODE == '01' ] ; then
    clear
    printf "Digite o nome do seu programa (Sem a extensão)\n\n"
    read PROGRAMA_NOME
    cd $HOME/Franks/Python && touch $PROGRAMA_NOME$PY && echo '#!/usr/bin/python3' >> $PROGRAMA_NOME$PY && $EDITOR $PROGRAMA_NOME$PY

  elif [ $CODE == '2' ] || [ $CODE == '02' ] ; then
    clear
    printf "Digite o nome do seu peograma (Sem a extensão)\n\n"
    read PROGRAMA_NOME1
    cd $HOME/Franks/Shell_Scripts && touch $PROGRAMA_NOME1$SH && chmod +x $PROGRAMA_NOME1$SH && echo '#!/usr/bin/env bash' >> $PROGRAMA_NOME1$SH && $EDITOR $PROGRAMA_NOME1$SH

  elif [ $CODE == '3' ] ; then
    clear && exit 0
    
  else
    continue
  fi
done
