#!/bin/env bash

# Script para codar

PY=.py
SH=.sh

while true; do
  clear
  echo 'Escolha uma das opções abaixo:'
  echo
  echo '[1] - Codar em Python'
  echo '[2] - Codar em Shell Script'
  echo '[3] - Sair'
  echo
  read CODE
  if [ $CODE == '1' ] ; then
    clear
    echo 'Digite o nome do seu programa (Sem a extensão)'
    echo
    read PROGRAMA_NOME
    cd $HOME/Franks/Python && touch $PROGRAMA_NOME$PY && echo '#!/bin/python3' >> $PROGRAMA_NOME$PY && nvim $PROGRAMA_NOME$PY

  elif [ $CODE == '2' ] ; then
    clear
    echo 'Digite o nome do seu peograma (Sem a extensão)'
    echo
    read PROGRAMA_NOME1
    cd $HOME/Franks/Shell_Scripts && touch $PROGRAMA_NOME1$SH && chmod +x $PROGRAMA_NOME1$SH && echo '#!/bin/env bash' >> $PROGRAMA_NOME1$SH && nvim $PROGRAMA_NOME1$SH

  elif [ $CODE == '3' ] ; then
    clear && exit 0
    
  else
    continue
  fi
done

