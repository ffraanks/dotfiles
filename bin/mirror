#!/usr/bin/env bash

install_package(){
clear
read -p 'Dê permissão sudo para baixar o pacote REFLECTOR (PRESS ENTER TO CONTINUE)'
clear && sudo pacman -S reflector --noconfirm
}

country(){
clear
printf "Digite um nome de um país (Em inglês):\n\n"
read COUNTRY1
printf "\nDigite um nome de um outro país (Em inglês):\n\n"
read COUNTRY2
}

start_file(){
clear
sudo reflector --country "$COUNTRY1" --country "$COUNTRY2" --age 12 --protocol https --sort rate --save /etc/pacman.d/mirrorlist
clear && exit 0
}

# Init
install_package
country
start_file
