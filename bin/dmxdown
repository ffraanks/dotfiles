#!/bin/env bash

# COLORS
RED="\033[1;31m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
MAGENTA="\033[1;35m"
CYAN="\033[1;36m"

mkdir $HOME/deemix_musics
#DIR=$HOME/deemix_musics

# main
while true ; do
  clear
  echo "
 ██████╗ ███████╗███████╗███╗   ███╗██╗██╗  ██╗
 ██╔══██╗██╔════╝██╔════╝████╗ ████║██║╚██╗██╔╝
 ██║  ██║█████╗  █████╗  ██╔████╔██║██║ ╚███╔╝ 
 ██║  ██║██╔══╝  ██╔══╝  ██║╚██╔╝██║██║ ██╔██╗ 
 ██████╔╝███████╗███████╗██║ ╚═╝ ██║██║██╔╝ ██╗
 ╚═════╝ ╚══════╝╚══════╝╚═╝     ╚═╝╚═╝╚═╝  ╚═╝
                                                "
  echo
  echo 'Escolha uma das opções:'
  echo '[1] - Baixar albúm'
  echo '[2] - Baixar track'
  echo '[3] - Sair do Deemix'
  echo
  read ALT
  echo
  if [ $ALT == '1' ] ; then
    echo 'Digite o nome do albúm Ex: (Covet):'
    echo
    read ALBUM
    echo
    echo 'Agora cole a URL do seu albúm Ex: (https://www.deezer.com/us/artist/1444150):'
    echo
    read URL
    echo
    cd $HOME/deemix_musics && deemix -b flac -p $ALBUM "$URL"

  elif [ $ALT == '2' ] ;then
    echo 'EM DESENVOLVIMENTO... (PRESS ENTER TO CONTINUE...)'
    read
    #echo 'Digite o nome da pasta:'
    #echo && cd $HOME/deemix_musics && ls && echo
    #read PASTE_NAME
    #echo
    #cd $PASTE_NAME
    #echo 'Cole aqui a URL da sua track:'
    #echo
    #read URL_TRACK
    #echo
    #deemix -b flac "$URL_TRACK"

  elif [ $ALT == '3' ] ; then
    clear
    echo 'Saindo...' && sleep 1 && exit 0

  else
    continue
  fi
done
