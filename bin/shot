#!/bin/sh

TMP="/tmp/$(date +"%Y-%m-%d_%H:%M:%S").png"
DIR="$HOME/Pictures/$(date +"%Y-%m-%d_%H:%M:%S").png"

sr ()
{
	import -quality 100 -window root $DIR
	notify-send -u low -i "$DIR" "PrintScreen" "Saved in $DIR"    
}

sa ()
{
	import -quality 100 $DIR
	notify-send -u low -i "$DIR" "PrintScreen" "Area saved in $DIR"   
}

cr ()
{
	import -quality 100 -window root $TMP
	xclip -selection c -t image/png $TMP
	notify-send -u low -i "$TMP" "PrintScreen" "Copied to clipboard"    
}

ca ()
{
	import -quality 100 $TMP
	xclip -selection c -t image/png $TMP
	notify-send -u low -i "$TMP" "PrintScreen" "Area copied to clipboard"
}

ur ()
{
	import -quality 100 -window root $TMP
	xclip -selection c -i <<< $(curl -F file=@$TMP http://0x0.st)
	notify-send -u low -i "$TMP" "PrintScreen" "Uploaded and url copied"
}

ua ()
{
	import -quality 100 $TMP
	xclip -selection c -i <<< $(curl -F file=@$TMP http://0x0.st)
	notify-send -u low -i "$TMP" "PrintScreen" "Area uploaded and url copied"
}

fun=$(echo $@ |sed 's/\-//g;s/ //g')

${fun}
